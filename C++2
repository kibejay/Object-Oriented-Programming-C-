// Program to build a simple calculator using switch Statement
#include <iostream>
using namespace std;

int main() {
	int code, i;
	cout << "Enter the country code: " << endl;
	for(i=254; i<255; ++i) {
 cin >> code;
    }

	
    switch (code) {
        case 254:
            cout <<"This code belongs to Kenya";
            break;
        case 255:
            cout <<"This code belongs to Tanzania";
            break;
        case 256:
            cout <<"This code belongs to Uganda";
            break;
            default:
            // operator is doesn't match any case constant (+, -, *, /)
            cout << "Error! The code is not correct";
            break;
     
    }

    return 0;
}
